{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "esnext",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "exclude": [
        "./dist/**/*",
        "__tests__",
        "node_modules"
    ]
}